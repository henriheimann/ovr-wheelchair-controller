{
  "jsonid": "input_profile",
  "controller_type": "rollivr_controller",
  "device_class": "TrackedDeviceClass_Controller",
  "resource_root": "rollivr",
  "driver_name": "rollivr",
  "input_bindingui_mode": "single_device",
  "should_show_binding_errors": true,
  "input_bindingui": {
    "image": "{rollivr}/icons/rollivr_controller.svg"
  },
  "input_bindingui_left": {
    "image": "{rollivr}/icons/rollivr_controller.svg"
  },
  "input_bindingui_right": {
    "image": "{rollivr}/icons/rollivr_controller.svg"
  },
  "input_source": {
    "/input/joystick" : {
      "type" : "joystick",
      "binding_image_point" : [ 60, 20 ],
      "click" : false,
      "touch" : false
    }
  }
}
